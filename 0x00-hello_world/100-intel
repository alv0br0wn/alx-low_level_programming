#!/bin/bash

# Check if the CFILE variable is set
if [ -z "$CFILE" ]; then
    echo "CFILE variable is not set. Please export the C file name (e.g., export CFILE=main.c)"
        exit 1
	fi

# Check if the C file exists
	if [ ! -f "$CFILE" ]; then
	    echo "C file '$CFILE' not found."
	        exit 1
		fi

# Determine the output file name (replace .c with .s)
		OUTPUT_FILE="${CFILE%.c}.s"

# Generate the assembly code and save it to the output file
		gcc -S -masm=intel "$CFILE" -o "$OUTPUT_FILE"

# Check if the compilation was successful
		if [ $? -eq 0 ]; then
		    echo "Assembly code generated and saved in '$OUTPUT_FILE'"
		    else
		        echo "Error: Compilation failed."
			fi
